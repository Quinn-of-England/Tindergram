<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.soen341">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:label="@string/titile_change_password"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ChangeEmailActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_change_email"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ChangeUsernameActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_change_username"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/settings"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/register"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/tindergram"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ImageActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/login"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>